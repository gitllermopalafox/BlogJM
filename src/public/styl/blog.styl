@import url('https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,900');

a
	&:hover
		text-decoration none
.content
	margin 0px auto

.fb-comments
	margin-top 50px

.fb_iframe_widget
	vertical-align top
/*
	BLOG
*/
.snap-drawers
	display none
.banner-blog
	width 100%
	height 250px
	overflow hidden
	background url(../images/blog/banner-show.jpg)
.container
	text-align center
.blog-container
	width 866px
	display inline-block
	margin-bottom 30px
	.search-container
		height 86px
		text-align right
		div
			text-align left
			margin-top 15px
			background url(../images/blog/icon-search.png) no-repeat 8px center
			border 1px solid #808080
			padding 5px 5px 5px 40px
		input[type=submit]
			border 1px solid #808080
			border-radius 5px
			height 30px
			width 30px
			background transparent
			
		input[type="text"]	
			width 160px
			height 30px
			border none
			
			
	.blog-items, .preview-blog
		width 600px
		margin-top 100px
		display inline-block
		vertical-align top
		.show-result
			margin-top 18px
			text-align left
			font-family: 'Source Sans Pro', sans-serif;
			font-size 18px
		.item-info
			border 1px solid #CCC
			overflow hidden
			margin-bottom 15px
			.title-item
				span
					color #0573B6
					font-size 15px
					font-family: 'Source Sans Pro', sans-serif;
					font-weight 600
			.prev-image-cont
				width 266px
				height 207px
				overflow hidden
				display inline-block
				text-align center
			.preview-image-blog
				height 207px
				display inline-block
				vertical-align top
				margin-right 50px
			.more-information
				position relative
				width 326px
				height 190px
				padding 28px 15px 24px 15px
				display inline-block
				vertical-align top
				text-align left
				.overview-item
					font-family: 'Source Sans Pro', sans-serif;
					font-weight 500
					font-size 14px
					color #000
				.footer-item
					text-align: right;
					position: absolute;
					bottom: 15px;
					width: 300px;
					right: 18px;
					.date-info
						font-weight 600
						font-size 12px
						display inline-block
						text-align center
						color #808080
						font-family: 'Source Sans Pro', sans-serif;
						vertical-align bottom
						width 128px
					.btn-show-post
						width 168px
						font-family: 'Source Sans Pro', sans-serif;
						line-height 40px
						font-weight 600
						display inline-block
						color #172B60
						border 1px solid #172B60
						text-align center
						&:hover
							background #172b60
							color #FFF
							transition background .5s
							-moz-transition background .5s
							-webkit-transition background .5s
		.paginator
			margin-top 45px
			.pagination
				border none
				border-radius 0px
				li
					padding 0px
					margin-right 10px
					border-radius 0px
					border-radius 0px
					a
						border-radius 0px
						border 1px solid transparent
						min-width 55px
						height 60px
						line-height 60px
						font-size 20px
						font-weight 600
						font-family: 'Source Sans Pro', sans-serif;
						color #172B60
						background #FFCC33
						display inline-block
						vertical-align top
						float none
						padding 0px
						&.to-back
							width 140px
						
					&:first-child
						a
							background url(../images/blog/prev-icon.png) no-repeat center #FFCC33
					&:last-child
						a
							background url(../images/blog/next-icon.png) no-repeat center #FFCC33
					&.active
						border 1px solid transparent
						min-width 60px
						height 60px
						line-height 60px
						font-size 20px
						font-weight 600
						font-family: 'Source Sans Pro', sans-serif;
						color #172B60
						background #FFCC33
						display inline-block
						vertical-align top
						padding 0px
						border none
						span
							border-radius 0px
							float none
							height 60px
							min-width 60px
							background transparent
							border none
							padding 0px
							line-height 60px
					&.disabled
						display none
			
	.preview-blog
		margin-top 0px
		overflow hidden
		h2
			font-size 25px
			font-weight 300
			font-family 'Source Sans Pro', sans-serif;
			margin-top 15px
			color #0573B6
			height 75px
		.content-item-blog
			display block
			margin-top 25px
			text-align left
		.options-item
			height 22px
			.date-release
				float left
				font-weight 600
				font-size 14px
				color #808080
				font-family: 'Source Sans Pro', sans-serif;
				vertical-align bottom
			.social-media
				float right
				margin-right 10px
				> span	
					vertical-align top	
	.blog-filters
		width 245px
		display inline-block
		vertical-align top
		margin-left 15px
		> div
			>.panel-group
				margin 0px
				&:last-child
					margin-bottom 20px
			.panel-body
				padding 0px
				.post-item
					text-align left
					font-size 14px 
					font-family: 'Source Sans Pro', sans-serif;
					font-weight 500
					display block
					color #595661
					line-height 18px
					margin 5px 0px
					&:hover
						text-decoration none
						color #0573b6
						webkit-transition color .3s
						moz-transition color .3s
						transition color .3s
				.panel-group
					margin 2px 0px
					
			h2
				margin 0px
				font-family: 'Source Sans Pro', sans-serif;
				font-size 25px
				height 45px
				display inline-block
				width 100%
				vertical-align top
				line-height 45px
				font-weight 300
				color #FFF
				background #27AAE1
				text-align center
			&.filter-explorer
				text-align left
				span
					width 118px
					display inline-block
					font-weight 500
					font-family: 'Source Sans Pro', sans-serif;
					font-size 16px
					text-align center
					margin-top 5px
					margin-bottom 5px
					vertical-align top
					> a
						color #595661
			&.filter-notes
				text-align left
				.cont-img-item
					overflow hidden
					width 245px
					height 130px
					margin 2px 0px 8px 0px
					img
						width 270px
				.item-rel
					margin-bottom 5px
				span
					width 100%
					display block
					font-weight 600
					font-family: 'Source Sans Pro', sans-serif;
					font-size 16px
					color #595661
					line-height 26px
				h2
					margin 0px
					font-family: 'Source Sans Pro', sans-serif;
					font-size 20px
					font-weight 300
					height 45px
					display inline-block
					width 100%
					vertical-align top
					line-height 45px
					color #FFF
					background #27AAE1
					text-align center
			&.filter-date
				.panel
					border-radius 0px
					box-shadow none
					border none
					margin-top 2px
				.year-panel,.month-panel
					height 26px
					border none
					background #D0CED4
					color #172B60
					border-radius 0px
					padding 0px
					h4
						a
							font-weight 500
							font-size 23px
							font-family: 'Source Sans Pro', sans-serif;
							display block
							&:hover, &:focus
								text-decoration none
							span
								float right
								display inline-block
								width 29px
								height 26px
								&.to-show
									background url(../images/blog/year-show.png) no-repeat center
								&.to-hide
									background url(../images/blog/year-hide.png) no-repeat center
				.month-panel
					background #F2F2F4
					h4
						text-align left
						a
							font-size 23px
							color #0573B6
							margin-left 5px
							display block
